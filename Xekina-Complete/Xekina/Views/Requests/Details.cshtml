    <th>Event Time</th>
    <th>Phase</th>
    <th>Headline Activity</th>
    <th>Status</th>
    <th>Data</th>
    <th>Exception</th>
</tr>
@foreach (var item in Model.RequestLogs.OrderBy(i=>i.EventTime))
{
    <tr>
        <td>@item.EventTime</td>
        <td>@item.Phase</td>
        <td>@item.HeadlineActivity</td>
        <td>@item.Status</td>
        <td>@item.Data</td>
        <td>@item.Exception</td>
    </tr>
}
